{
  "name": "project-tanuki",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "ng test --karma-config=karma.conf.js --browsers=ChromeHeadless --watch=false --code-coverage",
    "socket-server": "node socket-server/app.js",
    "lint": "ng lint",
    "generate:api:auth:dev": "openapi-generator-cli generate -i https://raw.githubusercontent.com/BerghuisPeter/project-tanuki-back/refs/heads/develop/services/auth-service/openapi.yaml -g typescript-angular -o src/openApi/auth --additional-properties=serviceSuffix=AuthService,apiModulePrefix=Auth",
    "generate:api:profile:dev": "openapi-generator-cli generate -i https://raw.githubusercontent.com/BerghuisPeter/project-tanuki-back/refs/heads/develop/services/profile-service/openapi.yaml -g typescript-angular -o src/openApi/profile --additional-properties=serviceSuffix=ProfileService,apiModulePrefix=Profile",
    "generate:api:auth:prod": "openapi-generator-cli generate -i https://raw.githubusercontent.com/BerghuisPeter/project-tanuki-back/refs/heads/master/services/auth-service/openapi.yaml -g typescript-angular -o src/openApi/auth --additional-properties=serviceSuffix=AuthService,apiModulePrefix=Auth",
    "generate:api:profile:prod": "openapi-generator-cli generate -i https://raw.githubusercontent.com/BerghuisPeter/project-tanuki-back/refs/heads/master/services/profile-service/openapi.yaml -g typescript-angular -o src/openApi/profile --additional-properties=serviceSuffix=ProfileService,apiModulePrefix=Profile",
    "generate:api": "npm run generate:api:auth:dev && npm run generate:api:profile:dev",
    "generate:api:prod": "npm run generate:api:auth:prod && npm run generate:api:profile:prod",
    "lint:report": "eslint src --format json -o eslint-report.json",
    "sonar": "npm run test:headless && npm run lint:report && cross-env sonar-scanner -Dsonar.login=$SONAR_TOKEN"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/cdk": "^21.1.3",
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/material": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/platform-browser-dynamic": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/uuid": "^9.0.1",
    "ngx-socket-io": "^4.10.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.5.3",
    "uuid": "^13.0.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "18.4.3",
    "@angular-eslint/eslint-plugin": "18.4.3",
    "@angular-eslint/eslint-plugin-template": "18.4.3",
    "@angular-eslint/schematics": "^21.2.0",
    "@angular-eslint/template-parser": "18.4.3",
    "@angular/build": "^21.1.3",
    "@angular/cli": "~21.1.3",
    "@angular/compiler-cli": "^21.1.3",
    "@openapitools/openapi-generator-cli": "^2.28.3",
    "@types/google.accounts": "^0.0.18",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "angular-cli-ghpages": "^1.0.6",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "9.26.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "postcss": "^8.5.6",
    "sonarqube-scanner": "^4.3.0",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.3"
  }
}
